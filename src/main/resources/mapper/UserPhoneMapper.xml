<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.foreveryang.my12306.mapper.UserPhoneMapper">

    <!-- 注销用户 -->
    <update id="deletionUser" parameterType="cn.foreveryang.my12306.dao.entity.UserPhoneDO">
        update t_user_phone
        set deletion_time = #{deletionTime},
            del_flag      = '1'
        where phone = #{phone}
          and del_flag = '0'
    </update>
</mapper>