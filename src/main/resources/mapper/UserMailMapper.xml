<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.foreveryang.my12306.mapper.UserMailMapper">

    <!-- 注销用户 -->
    <update id="deletionUser" parameterType="cn.foreveryang.my12306.dao.entity.UserMailDO">
        update t_user_mail
        set deletion_time = #{deletionTime},
            del_flag      = '1'
        where mail = #{mail} and del_flag = '0'
    </update>
</mapper>